<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".Fragments.QuizFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Cevap şıkları için TextView'ler -->

        <!-- Sonraki soruya geçmek için buton -->

        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:text="Timer: 20"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView20" />

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:text="Question"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTimer" />

        <TextView
            android:id="@+id/textViewOptionA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="A) Option A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
            app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
            app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

        <TextView
            android:id="@+id/textViewOptionB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="B) Option B"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
            app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
            app:layout_constraintTop_toBottomOf="@+id/textViewOptionA" />

        <TextView
            android:id="@+id/textViewOptionC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="C) Option C"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
            app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
            app:layout_constraintTop_toBottomOf="@+id/textViewOptionB" />

        <TextView
            android:id="@+id/textViewOptionD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="D) Option D"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
            app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
            app:layout_constraintTop_toBottomOf="@+id/textViewOptionC" />

        <Button
            android:id="@+id/buttonNextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp"
            android:text="Next Question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coinQue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/coin"
            app:layout_constraintBottom_toBottomOf="@+id/coinQue"
            app:layout_constraintEnd_toStartOf="@+id/coinQue"
            app:layout_constraintTop_toTopOf="@+id/coinQue" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.navigation.NavigationView>